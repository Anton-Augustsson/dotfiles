## ~/.config/lf/lfrc
set preview true
set previewer ~/.config/lf/preview.sh
set cleaner ~/.config/lf/cleaner.sh

cmd open ${{
  case $(file --mime-type -Lb "$f") in
    text/*) 
      nvim "$fx"
      ;;
    application/pdf)
      nohup zathura "$fx" >/dev/null 2>&1 &
      ;;
    *) 
      xdg-open "$fx"
      ;;
  esac
}}

